
<%= form_for([@classroom, @assignment]) do |f| %>


   <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

</br>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "50%" %>
  </div>

</br>


 <div class="field">
    <%= f.label "Minimum Words" %><br>
    <%= f.text_field :wordcountmin %>
  </div>

  <div class="field">
    <%= f.label "Maximum Words" %><br>
    <%= f.text_field :wordcountmax %>
  </div>

  <div class="field">
    <%= f.label "Due Date" %><br>
    <%= f.datetime_select :duedate %>
  </div>




 <div class="field">
    <%= f.label "Rubric" %><br>
    <%= f.collection_select :evaluation, current_user.evaluations.all, :id, :name %>
  </div>


</br>

  <div class="actions">
    <%= f.submit %>
  </div>






<% end %>

