
<div id="sign_up_box">

<div class="sign_in_title">Edit <%= resource_name.to_s.humanize %></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :first_name %><br />
    </div>
    <%= f.text_field :first_name, autofocus: true, :class=> "sign_in_up" %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :last_name %><br />
    </div>
    <%= f.text_field :last_name, autofocus: true, :class=> "sign_in_up" %>
  </div>

  </br>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, collection: User.roles.keys.to_a %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, autofocus: true, :class=> "sign_in_up" %>
  </div>

  </br>
  
   <div class="field">
    <%= f.label :teacher %><br>
    <%= f.select :teacher, @teachers.map{ |c| [c.first_name + " " + c.last_name, c.id] }%>
  </div>

 
</br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :password %></div> <i>(leave blank if you don't want to change it)</i><br />
    
    <%= f.password_field :password, autocomplete: "off", :class=> "sign_in_up" %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :password_confirmation %><br />
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=> "sign_in_up" %>
  </div>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :current_password %> </div> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :class=> "sign_in_up" %>
  </div>

  </br>

  <div class="actions">
    <%= f.submit "Update", :class => "submit_class_button" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>

