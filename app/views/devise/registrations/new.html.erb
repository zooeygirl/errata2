
<div id="sign_up_box">

<div class="sign_in_title">Sign up</div>

</br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  
  <div class="field">
    <div class="sign_in_form_label">
    <%= f.label :first_name %><br />
    </div>
    <%= f.text_field :first_name, autofocus: true, :class => "sign_in_up" %>
  </div>

  </br>

  <div class="field">
   <div class="sign_in_form_label">
    <%= f.label :last_name %><br />
    </div>
    <%= f.text_field :last_name, autofocus: true, :class => "sign_in_up" %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :role %><br />
    </div>
    <%= f.select :role, collection: User.roles.keys.to_a %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :email %><br />
    </div>
    <%= f.email_field :email, autofocus: true, :class => "sign_in_up" %>
  </div>

  </br>

   <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :teacher %><br>
    </div>
    <%= f.select :teacher, @teachers.map{ |c| [c.first_name + " " + c.last_name, c.id] }%>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :password %></div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    
    <%= f.password_field :password, autocomplete: "off", :class => "sign_in_up" %>
  </div>

  </br>

  <div class="field">
     <div class="sign_in_form_label">
    <%= f.label :password_confirmation %><br />
    </div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "sign_in_up" %>
  </div>

  </br>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'submit_class_button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

